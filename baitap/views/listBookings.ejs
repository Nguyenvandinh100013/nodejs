<!DOCTYPE html>
<html>
<head>
    <title>List of Bookings</title>
</head>
<body>
    <style>
        .pending {
            color: yellow;
        }
        .confirmed {
            color: green;
        }
        .cancelled {
            color: red;
        }
    </style>
    
    <h1>Bookings</h1>
    <a href="/add">Add New Booking</a>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Customer Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        <% bookings.forEach(booking => { %>
        <tr>
            <td><%= booking._id %></td>
            <td><%= booking.customerName %></td>
            <td><%= booking.date.toISOString().slice(0, 10) %></td>
            <td><%= booking.time %></td>
            <td class="<%= booking.status.toLowerCase() %>">
                <%= booking.status %>
            </td>
            
            
            <td>
                <a href="/edit/<%= booking._id %>">Edit</a>
                <form action="/cancel/<%= booking._id %>" method="POST" style="display:inline;">
                    <button type="submit">Cancel</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </table>
</body>
</html>
